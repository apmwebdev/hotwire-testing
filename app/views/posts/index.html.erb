<% content_for :title, "Posts" %>
<h1>Posts</h1>

<div id="posts">
  <div>Table header</div>
  <table class="table table-hover table-striped">
    <thead>
    <tr>
      <th><input type="checkbox" class="form-check-input" aria-label="mass select"></th>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><input type="checkbox" class="form-check-input" aria-label="select this post"></td>
        <td><%= link_to post.title, post %></td>
        <td><%= link_to post.author.name, post.author %></td>
        <td><%= post.status %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= paginate @posts %>

<%= link_to "New post", new_post_path %>
