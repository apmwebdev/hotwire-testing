<div id="<%= dom_id post %>" class="card">
  <h3 class="card-header h5"><%= post.title %></h3>
  <div  class="card-body">
    <div class="card-subtitle">
      by <%= link_to post.author.name, post.author %>
    </div>
    <div class="text-truncate">
      <%= truncate_post(post.body) %>
    </div>
    <div>
      <%= link_to "Show this post", post %>
    </div>
  </div>
</div>
